<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_product_template_form_shorepos" model="ir.ui.view">
    <field name="name">product.template.form.shorepos</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='options']" position="inside">
        <span class="d-inline-block">
          <field name="sync_to_shorepos"/>
          <label for="sync_to_shorepos"/>
        </span>
      </xpath>
      <xpath expr="//page[@name='general_information']//field[@name='categ_id']" position="after">
        <field name="default_code" invisible="product_variant_count == 1"/>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="Shore POS" invisible="not shorepos_id">
          <group string="General Information">
            <field name="shorepos_store_identifier"/>
            <field name="shorepos_id"/>
            <field name="odoo_to_shorepos_last_sync"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
